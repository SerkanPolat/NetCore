@model NetCore.Models.UserLoginModel
<!DOCTYPE html>
<html>
<head>
    <title>Serkan Polat</title>
    <link href="~/content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <input type="text" asp-for="@Model.userName" class="form-control" />
        </div>
        <div class="form-group">
            <input type="text" asp-for="@Model.password" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" />
        </div>
        <label asp-for="Beni Hatirla" class="form-check-label">Beni Hatirla</label>
        <button type="submit"> Giris Yap</button>
    </form>
</body>
</html>